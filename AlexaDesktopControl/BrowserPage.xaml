<Page x:Class="AlexaDesktopControl.BrowserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
      xmlns:local="clr-namespace:AlexaDesktopControl"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="BrowserPage" ShowsNavigationUI="False">

    <Grid>
        <DockPanel>
            <cefSharp:ChromiumWebBrowser Name="browser" Grid.Row="0" Address="https://alexa.amazon.com/spa/index.html#settings/dialogs" />
        </DockPanel>
    </Grid>
</Page>
