<Application x:Class="AlexaDesktopControl.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
             xmlns:properties="clr-namespace:AlexaDesktopControl.Properties"
             xmlns:local="clr-namespace:AlexaDesktopControl"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ImageBtnStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
        <properties:Settings x:Key="Settings" />
    </Application.Resources>
</Application>
